    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Elements
            const uploadArea = document.getElementById('uploadArea');
            const fileInput = document.getElementById('fileInput');
            const previewImage = document.getElementById('previewImage');
            const previewPlaceholder = document.getElementById('previewPlaceholder');
            const processBtn = document.getElementById('processBtn');
            const downloadBtn = document.getElementById('downloadBtn');
            const enhanceBtns = document.querySelectorAll('.enhance-btn');
            const qualitySlider = document.getElementById('qualitySlider');
            const qualityValue = document.getElementById('qualityValue');
            const notification = document.getElementById('notification');
            const comparisonContainer = document.getElementById('comparisonContainer');
            const beforeImage = document.getElementById('beforeImage');
            const afterImage = document.getElementById('afterImage');
            const comparisonSlider = document.getElementById('comparisonSlider');
            const comparisonHandle = document.querySelector('.comparison-slider-handle');
            const finalOutput = document.getElementById('finalOutput');
            const finalImage = document.getElementById('finalImage');
            const newImageBtn = document.getElementById('newImageBtn');
            
            // Info display elements
            const originalSizeEl = document.getElementById('originalSize');
            const enhancedSizeEl = document.getElementById('enhancedSize');
            const enhancementLevelEl = document.getElementById('enhancementLevel');
            const qualityLevelEl = document.getElementById('qualityLevel');
            const pixelIncreaseEl = document.getElementById('pixelIncrease');
            const resolutionStat = document.getElementById('resolutionStat');
            const detailStat = document.getElementById('detailStat');
            
            // State
            let selectedFile = null;
            let enhancementLevel = null;
            let qualityLevel = parseInt(qualitySlider.value);
            let originalImageData = null;
            
            // Event listeners
            uploadArea.addEventListener('click', () => {
                fileInput.click();
            });
            
            uploadArea.addEventListener('dragover', (e) => {
                e.preventDefault();
                uploadArea.style.borderColor = '#2980b9';
                uploadArea.style.backgroundColor = '#f8f9fa';
            });
            
            uploadArea.addEventListener('dragleave', () => {
                uploadArea.style.borderColor = '#3498db';
                uploadArea.style.backgroundColor = 'transparent';
            });
            
            uploadArea.addEventListener('drop', (e) => {
                e.preventDefault();
                uploadArea.style.borderColor = '#3498db';
                uploadArea.style.backgroundColor = 'transparent';
                
                if (e.dataTransfer.files.length) {
                    handleFile(e.dataTransfer.files[0]);
                }
            });
            
            fileInput.addEventListener('change', () => {
                if (fileInput.files.length) {
                    handleFile(fileInput.files[0]);
                }
            });
            
            enhanceBtns.forEach(btn => {
                btn.addEventListener('click', () => {
                    enhanceBtns.forEach(b => b.classList.remove('active'));
                    btn.classList.add('active');
                    enhancementLevel = parseInt(btn.dataset.level);
                    enhancementLevelEl.textContent = `${enhancementLevel}x`;
                });
            });
            
            qualitySlider.addEventListener('input', () => {
                qualityLevel = parseInt(qualitySlider.value);
                qualityValue.textContent = `${qualityLevel}%`;
                qualityLevelEl.textContent = `${qualityLevel}%`;
            });
            
            processBtn.addEventListener('click', processImage);
            downloadBtn.addEventListener('click', downloadImage);
            newImageBtn.addEventListener('click', resetTool);
            
            // Comparison slider functionality
            let isDragging = false;
            
            comparisonHandle.addEventListener('mousedown', function(e) {
                isDragging = true;
                e.preventDefault();
            });
            
            document.addEventListener('mouseup', function() {
                isDragging = false;
            });
            
            document.addEventListener('mousemove', function(e) {
                if (!isDragging) return;
                
                const sliderRect = comparisonSlider.getBoundingClientRect();
                let position = (e.clientX - sliderRect.left) / sliderRect.width;
                position = Math.max(0, Math.min(1, position));
                
                document.querySelector('.comparison-before').style.width = position * 100 + '%';
                comparisonHandle.style.left = position * 100 + '%';
            });
            
            // Touch events for mobile
            comparisonHandle.addEventListener('touchstart', function(e) {
                isDragging = true;
                e.preventDefault();
            });
            
            document.addEventListener('touchend', function() {
                isDragging = false;
            });
            
            document.addEventListener('touchmove', function(e) {
                if (!isDragging) return;
                
                const touch = e.touches[0];
                const sliderRect = comparisonSlider.getBoundingClientRect();
                let position = (touch.clientX - sliderRect.left) / sliderRect.width;
                position = Math.max(0, Math.min(1, position));
                
                document.querySelector('.comparison-before').style.width = position * 100 + '%';
                comparisonHandle.style.left = position * 100 + '%';
            });
            
            // Functions
            function handleFile(file) {
                if (!file.type.match('image.*')) {
                    alert('Please select an image file.');
                    return;
                }
                
                if (file.size > 5 * 1024 * 1024) {
                    alert('File size exceeds 5MB limit.');
                    return;
                }
                
                selectedFile = file;
                originalSizeEl.textContent = formatFileSize(file.size);
                
                const reader = new FileReader();
                reader.onload = function(e) {
                    // Show the original image
                    previewImage.src = e.target.result;
                    previewImage.style.display = 'block';
                    previewPlaceholder.style.display = 'none';
                    
                    // Set the before image for comparison
                    beforeImage.src = e.target.result;
                    
                    // Store original image data
                    originalImageData = e.target.result;
                    
                    // Reset enhancement UI
                    finalOutput.style.display = 'none';
                    downloadBtn.style.display = 'block';
                };
                reader.readAsDataURL(file);
                
                // Enable process button if enhancement level is selected
                if (enhancementLevel) {
                    processBtn.disabled = false;
                }
            }
            
            function processImage() {
                if (!selectedFile) {
                    alert('Please select an image first.');
                    return;
                }
                
                if (!enhancementLevel) {
                    alert('Please select an enhancement level.');
                    return;
                }
                
                // Simulate processing delay
                processBtn.disabled = true;
                processBtn.textContent = 'Enhancing...';
                
                // In a real application, this would be an actual image enhancement algorithm
                setTimeout(() => {
                    // For demo purposes, we'll simulate enhancement
                    const originalSize = selectedFile.size;
                    const enhancedSize = Math.round(originalSize * (1 + enhancementLevel/10)); // Simulate size increase due to enhancement
                    enhancedSizeEl.textContent = formatFileSize(enhancedSize);
                    enhancementLevelEl.textContent = `${enhancementLevel}x`;
                    qualityLevelEl.textContent = `${qualityLevel}%`;
                    
                    // Calculate pixel increase based on enhancement level
                    const pixelIncrease = enhancementLevel * 100;
                    pixelIncreaseEl.textContent = `${pixelIncrease}%`;
                    
                    // Update stats
                    resolutionStat.textContent = `${100 * enhancementLevel}%`;
                    const detailImprovement = 20 * enhancementLevel;
                    detailStat.textContent = `${detailImprovement}%`;
                    
                    // Show comparison slider
                    comparisonContainer.style.display = 'block';
                    
                    // Create enhanced image data (in a real app, this would be actual enhancement)
                    afterImage.src = originalImageData;
                    previewImage.src = originalImageData;
                    finalImage.src = originalImageData;
                    
                    // Show download button
                    downloadBtn.disabled = false;
                    
                    // Show final output
                    finalOutput.style.display = 'block';
                    
                    // Reset process button
                    processBtn.disabled = false;
                    processBtn.textContent = 'Enhance Image';
                    
                    // Show notification
                    showNotification('Image enhanced successfully!');
                }, 1500);
            }
            
            function downloadImage() {
                // Create a download link for the enhanced image
                const link = document.createElement('a');
                link.href = previewImage.src;
                link.download = `enhanced-${selectedFile.name}`;
                document.body.appendChild(link);
                link.click();
                document.body.removeChild(link);
            }
            
            function resetTool() {
                // Reset the tool to its initial state
                selectedFile = null;
                enhancementLevel = null;
                enhanceBtns.forEach(btn => btn.classList.remove('active'));
                previewImage.style.display = 'none';
                previewPlaceholder.style.display = 'flex';
                comparisonContainer.style.display = 'none';
                finalOutput.style.display = 'none';
                downloadBtn.disabled = true;
                processBtn.disabled = true;
                
                // Reset info displays
                originalSizeEl.textContent = '-';
                enhancedSizeEl.textContent = '-';
                enhancementLevelEl.textContent = '-';
                qualityLevelEl.textContent = '-';
                pixelIncreaseEl.textContent = '-';
                resolutionStat.textContent = '-';
                detailStat.textContent = '-';
                
                // Reset quality slider
                qualitySlider.value = 100;
                qualityValue.textContent = '100%';
            }
            
            function formatFileSize(bytes) {
                if (bytes < 1024) {
                    return bytes + ' bytes';
                } else if (bytes < 1048576) {
                    return (bytes / 1024).toFixed(2) + ' KB';
                } else {
                    return (bytes / 1048576).toFixed(2) + ' MB';
                }
            }
            
            function showNotification(message) {
                notification.textContent = message;
                notification.classList.add('show');
                
                setTimeout(() => {
                    notification.classList.remove('show');
                }, 3000);
            }
            
            // Initialize quality slider value display
            qualityValue.textContent = `${qualityLevel}%`;
        });
    </script>
</body>
</html>
